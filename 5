def inverter_string(texto):
  """
  Inverte os caracteres de uma string sem usar a função reverse().

  Args:
    texto: A string a ser invertida.

  Returns:
    A string invertida.
  """
  texto_invertido = ""
  for i in range(len(texto) - 1, -1, -1):
    texto_invertido += texto[i]
  return texto_invertido

# Exemplo de uso
minha_string = "Hello, world!"
string_invertida = inverter_string(minha_string)
print(f"String original: {minha_string}")
print(f"String invertida: {string_invertida}")

# Outro exemplo com entrada do usuário:
entrada = input("Digite uma frase:")
string_invertida_usuario = inverter_string(entrada)
print(f"A frase invertida é: {string_invertida_usuario}")
