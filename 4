def calcular_percentual_faturamento(faturamento):
  """
  Calcula o percentual de representação de cada estado no faturamento total.

  Args:
    faturamento: Um dicionário com o faturamento de cada estado.

  Returns:
    Um dicionário com o percentual de representação de cada estado.
  """

  total = sum(faturamento.values())
  percentuais = {}

  for estado, valor in faturamento.items():
    percentuais[estado] = (valor / total) * 100

  return percentuais

# Dados de faturamento
faturamento = {
    "SP": 67836.43,
    "RJ": 36678.66,
    "MG": 29229.88,
    "ES": 27165.48,
    "Outros": 19849.53,
}

# Cálculo dos percentuais
percentuais = calcular_percentual_faturamento(faturamento)

# Impressão dos resultados
for estado, percentual in percentuais.items():
  print(f"{estado}: {percentual:.2f}%")
